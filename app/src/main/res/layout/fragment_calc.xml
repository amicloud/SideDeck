<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.outplaysoftworks.sidedeck.CalcFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/a_material_dark">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:background="@color/a_material_dark">

            <!--First layout, for points and turn indicator-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <TextView android:id="@+id/playerOneLP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/trans"
                    android:elevation="2dp"
                    android:textSize="35dip"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:layout_margin="2dp"
                    android:typeface="monospace"
                    android:textColor="@color/a_material_white" />

                <Button android:id="@+id/buttonTurn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/turn1"
                    android:textSize="17dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_pressed_operator"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="3dp"
                    android:textColor="@color/primary_text"
                    android:onClick="changeTurn" />

                <TextView android:id="@+id/playerTwoLP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/trans"
                    android:elevation="2dp"
                    android:textSize="35dip"
                    android:gravity="center"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:layout_margin="2dp"
                    android:typeface="monospace"
                    android:textColor="@color/a_material_white" />

            </LinearLayout>

            <!--Second layout, for the player names and working number for LP calc-->
            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants">

                <EditText
                    android:cursorVisible="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Player 1"
                    android:id="@+id/playerOneName"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"
                    android:elevation="0dp"
                    android:gravity="left|center_vertical"
                    android:typeface="sans"
                    android:textColor="@color/a_material_white"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:selectAllOnFocus="true"
                    android:textColorHint="@color/accenttranslucent"
                    android:elegantTextHeight="false"
                    android:capitalize="words"
                    android:textAlignment="center"
                    android:text="@string/playerOne" />

                <TextView android:id="@+id/numberHolder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:textAlignment="center"
                    android:typeface="monospace"
                    android:maxLines="1"
                    android:shadowColor="#b0b0b0"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:elevation="0dp"
                    android:onClick="resetNumberHolder"
                    android:textColor="@color/a_material_white"
                    android:textStyle="bold" />

                <EditText
                    android:cursorVisible="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Player 2"
                    android:id="@+id/playerTwoName"
                    android:textAlignment="center"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"
                    android:elevation="0dp"
                    android:typeface="sans"
                    android:textColor="@color/a_material_white"
                    android:textSize="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:selectAllOnFocus="true"
                    android:textColorHint="@color/accenttranslucent"
                    android:elegantTextHeight="false"
                    android:capitalize="words"
                    android:text="@string/playerTwo" />

            </LinearLayout>

            <!--Plus buttons and dice button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <Button
                    android:tag="1+"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="+"
                    android:onClick="modLP"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_green"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textSize="30dp"
                    android:typeface="sans"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/diceRoll"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_operator"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textColor="@color/primary_text"
                    android:onClick="diceRoll"
                    android:id="@+id/diceButton" />

                <Button
                    android:tag="2+"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="+"
                    android:onClick="modLP"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_green"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textSize="30dp"
                    android:typeface="sans"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <!--Minus buttons and coin button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <Button
                    android:tag="1-"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="-"
                    android:onClick="modLP"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_red"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textSize="30dp"
                    android:typeface="sans"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/coinFlip"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_operator"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textColor="@color/primary_text"
                    android:id="@+id/coinButton"
                    android:onClick="coinFlip" />

                <Button
                    android:tag="2-"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="-"
                    android:onClick="modLP"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_pressed_red"
                    style="?android:attr/borderlessButtonStyle"
                    android:elevation="2dp"
                    android:textSize="30dp"
                    android:typeface="sans"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:background="@color/a_material_dark_tinted_dark">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:tag="7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="8"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="9"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:tag="4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="5"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:elevation="0dp">

                <Button
                    android:tag="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="addToNumberHolder"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:shadowColor="#000000"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="addToNumberHolder"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:shadowColor="#000000"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text"
                    android:textColorHighlight="@color/a_material_light" />
                <Button
                    android:tag="3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:shadowColor="#000000"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:tag="0"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textSize="35dp"
                    android:text="0"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="00"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="00"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />
                <Button
                    android:tag="000"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="000"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:onClick="addToNumberHolder"
                    android:elegantTextHeight="false"
                    android:fontFamily="roboto"
                    android:layout_margin="1dp"
                    android:elevation="2dp"
                    android:ellipsize="start"
                    android:padding="0dp"
                    android:outlineProvider="background"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/button_pressed_number"
                    android:nestedScrollingEnabled="false"
                    android:textColor="@color/primary_text" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/adHolder"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal"
            android:background="#000000"
            android:visibility="gone">
            <!--<com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:background="#000000">
            </com.google.android.gms.ads.AdView>-->
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/quickCalcHolder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Blank space-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:elevation="20dp"
                android:orientation="horizontal"
                android:background="@color/a_material_dark"
                android:layout_margin="0dp"
                android:clickable="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="1dp"
                    android:clickable="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789012345"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="24.5dp"
                            android:layout_alignParentStart="true"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/a_material_white"
                            android:id="@+id/qcWorkDisplay"
                            android:typeface="monospace" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9999999"
                            android:id="@+id/qcResultDisplay"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="24.5dp"
                            android:textColor="@color/a_material_accent"
                            android:typeface="monospace"
                            android:textIsSelectable="false" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:minHeight="1dp"
                            android:background="@color/a_material_accent"
                            android:maxHeight="1dp"
                            android:height="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_alignBottom="@+id/qcResultDisplay"
                            android:layout_marginTop="27dp"
                            android:layout_alignParentTop="true"
                            android:id="@+id/textView2"
                            android:visibility="gone" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/button"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/textView2"
                            android:clickable="true"
                            android:onClick="qcResetHolder"
                            android:background="@color/trans" />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_pressed_number"
                                android:padding="2dp"
                                android:layout_margin="1dp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:text="7"
                                android:textColor="@color/a_material_white"
                                android:textSize="17.5dp"
                                android:tag="7"
                                android:onClick="qcAddToWorkHolder" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_pressed_number"
                                android:layout_margin="1dp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:text="8"
                                android:textColor="@color/a_material_white"
                                android:textSize="17.5dp"
                                android:tag="8"
                                android:onClick="qcAddToWorkHolder" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_pressed_number"
                                android:layout_margin="1dp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:text="9"
                                android:textColor="@color/a_material_white"
                                android:textSize="17.5dp"
                                android:tag="9"
                                android:onClick="qcAddToWorkHolder" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/button_pressed_number"
                                android:layout_margin="1dp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/a_material_white"
                                android:textSize="17.5dp"
                                android:tag="4"
                                android:onClick="qcAddToWorkHolder" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
